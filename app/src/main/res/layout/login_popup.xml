<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="850dp"
    android:layout_gravity="center"
    android:background="@drawable/popupbackground">

    <Button
        android:id="@+id/loginAction"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Intro"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="225dp"
        android:layout_marginRight="22dp"
        android:gravity="center"
        android:hint="Logheaza-te"
        android:onClick="onLoadButtonClick"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/idUtilizatorCeva"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/sir" />

    <TextView
        android:id="@+id/Intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/idUtilizatorCeva"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:text="Super, Te-ai intors!"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/loginEmail"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Intro"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="22dp"
        android:gravity="center"
        android:hint="Adresa de mail"
        android:textSize="20sp" />


    <EditText
        android:id="@+id/loginPassword"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Intro"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="162dp"
        android:layout_marginRight="22dp"
        android:gravity="center"
        android:hint="Parola"
        android:password="true"
        android:textSize="20sp" /><![CDATA[

    />


]]>
</RelativeLayout>