<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="850dp"
    android:layout_gravity="center"
    android:background="@drawable/popupbackground">

    <ImageView
        android:id="@+id/idUtilizatorCeva"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/sir"/>

    <TextView
        android:id="@+id/Intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Devino SuperUtilizator"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:layout_below="@id/idUtilizatorCeva"/>

    <EditText
        android:id="@+id/NumeFamilie"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Nume de familie"
        android:textSize="20sp"
        android:layout_below="@id/Intro"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:layout_marginRight="22dp"
        android:layout_marginLeft="22dp" />

    <EditText
        android:id="@+id/Prenume"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Intro"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="54dp"
        android:layout_marginRight="22dp"
        android:gravity="center"
        android:hint="Prenume"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/Username"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Intro"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="126dp"
        android:layout_marginRight="22dp"
        android:gravity="center"
        android:hint="Nume de utilizator"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/Email"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Intro"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="22dp"
        android:gravity="center"
        android:hint="Adresa de mail"
        android:textSize="20sp" />


    <EditText
        android:id="@+id/Password"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Intro"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="162dp"
        android:layout_marginRight="22dp"
        android:gravity="center"
        android:hint="Parola"
        android:password="true"
        android:textSize="20sp" />

    <Button
        android:id="@+id/Inregistreaza"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Intro"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="22dp"
        android:onClick="onRegisterButtonClick"
        android:layout_marginTop="225dp"
        android:layout_marginRight="22dp"
        android:gravity="center"
        android:hint="Inregistreaza-te"
        android:textSize="20sp" /> />


</RelativeLayout>