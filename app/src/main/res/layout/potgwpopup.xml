<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Spinner for all players -->
    <TextView
        android:id="@+id/hintText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lista de jucători"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="8dp"/>

    <Spinner
        android:id="@+id/playerSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hintText"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"/>

    <!-- AutoCompleteTextView for custom player input -->
    <AutoCompleteTextView
        android:id="@+id/playerNameAutoComplete"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="SuperJucătorul Etapei"
        android:inputType="text"
        android:layout_gravity="center_horizontal"/>

    <!-- Button to submit the selected player -->
    <Button
        android:id="@+id/submitPlayerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Confirmă" />

</LinearLayout>